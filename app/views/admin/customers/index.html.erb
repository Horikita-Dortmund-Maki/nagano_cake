 <div class="container">
  <div class="row">
    <div class="col-md-6"> 
      <h3>会員一覧</h3>
        <table class='table'>
            <thead>
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
                <tr>
                  <th><%= customer.id %></th>
                  <th><%= customer.last_name %><%= customer.first_name %></th>
                  <th><%= customer.email %></th>
                  <th><%= customer.id_deleted %></th>
                </tr>
              <% end %>
            </tbody>
        </table>
