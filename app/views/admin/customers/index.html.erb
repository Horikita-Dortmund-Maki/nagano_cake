 <div class="container">
  <div class="row">
    <div class="col-md-6"> 
      <h3>会員一覧</h3>
        <table class='table'>
            <thead>
              <tr>
                <th>会員ID</th>
                <th>氏名</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @customers.each do |customer| %>
              <th><%= customer.id %></th>
              <th><%= link_to admin_customer_path(customer)  do %>
                   <%= customer.last_name %><%= customer.first_name %>
                  <% end %>
              </th>
              <th><%= customer.email %></th>
            <% if customer.id_deleted == true %>
              <th>退会</th>
            <% else %>
              <th>有効</th>
            <% end %>
      <% end %>
            </tbody>
        </table>
    