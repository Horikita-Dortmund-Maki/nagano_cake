  <div class="container">    
      <div class="row hoge">
        <div class="col-1"></div>
        <div class="col-8">
          <% if @customers == [] %>
          <h2 class = "seach-result">検索結果はありません</h2>
          <% else %>
              <table class='table'>
                  <thead class="thead-light title bodydesign">
                     <tr>
                        <th class='text-white bg-dark'>Customer_ID</th>
                        <th class='text-white bg-dark'>Name</th>
                        <th class='text-white bg-dark'>email</th>
                        <th class='text-white bg-dark'>Status</th>
                     </tr>
                  </thead>
                  <tbody class='title bodydesign'>
                    <% @customers.each do |customer| %>
                     <tr>
                        <td><%= customer.id %></td>
                        <td><%= link_to admin_customer_path(customer), :style => 'color:black;'  do %>
                             <%= customer.last_name %><%= customer.first_name %>
                         <% end %>
                        </td>
                        <td><%= customer.email %></td>
                      <% if customer.id_deleted == true %>
                        <th><span>退会</span></th>
                      <% else %>
                        <th><font color="#008000">有効</font></th>
                      <% end %>
                   </tr>
                       </tr>
                      <% end %>
                   </tbody>
              </table>
          <% end %>
        </div>
     </div>
  </div>


        