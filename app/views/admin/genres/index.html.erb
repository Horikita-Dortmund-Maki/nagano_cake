 <div class="container ">
    <div class="row">
      <div class="col-4">
           <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
             <h3>ジャンル一覧・追加</h3>
           </nav>
       </div>
     </div>
       <%= render partial: 'layouts/flash' %>
      <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
       <%= render 'layouts/error_messages', model: f.object %>
         <div class="row">
            <div class="col-2">
                <%= f.label :ジャンル名 %>
            </div>
            <div class="col-2">
              <div class="form-group row">
                 <%= f.text_field :name, placeholder:'ジャンル'%>
              </div>
             </div>
             <div class="col-2">
               <div class="form-group ">
                  <%= f.submit "新規登録", class:'btn btn-lg btn-success'  %>
               </div>
              </div>
            </div>
        <% end %>
   <!--<div class="row">-->
     <div class="col-5">
        <table class='table'>
           <thead class="thead-light">
              <tr>
                <th>ジャンル</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% @genres.each do |genre| %>
                 <tr>
                    <td><%= genre.name %></td>
                     <td><%= link_to '編集する',edit_admin_genre_path(genre),class: 'btn btn-success col-xs-12' %></td>
                 </tr>
            <% end %>
          </tbody>
        </table>
      </div>
 </div>
