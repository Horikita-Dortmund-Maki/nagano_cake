<div class='container'>
  <div class='row'>
    <div class='col-md-4'>
      <h2>新規商品登録</h2>
    </div>
    <div class='col-md-8'></div>
  </div>
  <div class='row'>
    <div class='mx-auto'>
      <%= form_with model:@item, url: admin_items_path, local:true do |f| %>
        <div class='form-group'>
          <label for='inputImage'>商品画像</label>
          <%= f.attachment_field :image, placeholder:'写真' %>
        </div>
        <div class='form-group'>
          <label for='inputName'>商品名</label>
          <%= f.text_field :name, autofocus: true, id:'inputName', placeholder:'名前' %>
        </div>
        <div class='form-group'>
          <label for='inputIntroduction'>商品説明</label>
          <%= f.text_area :introduction, autofocus: true, id:'inputIntroduction', placeholder:'ここに説明文を記述します', :size=>'30x5' %>
        </div>
        <div class='form-group'>
          <label for='inputGenre'>ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
        </div>
        <div class='form-group'>
          <label for='inputPrice'>税抜価格</label>
          <%= f.number_field :price, autofocus: true, id:'inputPrice', placeholder:'税抜価格' %>
          <text>円</text>
        </div>
        <div class='form-group'>
          <label>販売ステータス</label>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, '販売中', {value: :true, style: 'display: inline-block;'} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, '販売停止中', {value: :false, style: 'display: inline-block;'} %>
        </div>
        <div class='form-group'>
          <%= f.submit '新規登録', class:'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>