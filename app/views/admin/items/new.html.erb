<div class='container'>
  <div class='row'>
    <div class='col-md-4'>
      <h2 class='title'>New Item</h2>
    </div>
    <div class='col-md-8'></div>
  </div>
  <div class='row'>
    <div class='mx-auto newitem'>
        <%= render partial: 'layouts/flash' %>
      <%= form_with model:@item, url: admin_items_path, local:true do |f| %>
       <%= render 'layouts/error_messages', model: f.object %>
        <div class='form-group title'>
          <label for='inputImage'>Image</label><br>
          <%= f.attachment_field :image, placeholder:'写真' %>
        </div>
        <div class='form-group title'>
          <label for='inputName'>Name</label><br>
          <%= f.text_field :name, autofocus: true, id:'inputName' %>
        </div>
        <div class='form-group title'>
          <label for='inputIntroduction'>Introduction</label><br>
          <%= f.text_field :introduction, autofocus: true, id:'inputIntroduction' %>
        </div>
        <div class='form-group title'>
          <label for='inputGenre'>Genre</label><br>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: "Select"}, {class: 'btn btn-outline-dark'} %>
        </div>
        <div class='form-group title'>
          <label for='inputPrice'>Price(no_tax)</label><br>
          <%= f.number_field :price, autofocus: true, id:'inputPrice', placeholder:'税抜価格' %>
          <text>yen</text>
        </div>
        <div class='form-group title'>
          <label>Status</label><br>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, '販売中', {value: :true, style: 'display: inline-block;'} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, '販売停止中', {value: :false, style: 'display: inline-block;'} %>
        </div>
        <div class='form-group title hoge'>
          <%= f.submit 'Submit', class:'btn btn-lg btn-outline-dark' %>
        </div>
      <% end %>
    </div>
  </div>
</div>