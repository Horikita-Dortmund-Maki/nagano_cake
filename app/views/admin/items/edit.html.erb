<div class='container'>
  <div class='row'>
    <div class='col-3 offset-1'>
      <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <h2>商品編集</h2>
      </nav>
    </div>
    <div class='col-md-8'></div>
  </div>
  <div class='row hoge'>
    <div class="col-8 ">
    <div class='mx-auto'>
      <%= form_with model:@item, url: admin_item_path(@item), local:true do |f| %>
        <div class='form-group'>
          <label for='inputImage'>商品画像</label>
          <%= f.attachment_field :image, id:'inputImage', placeholder:'写真' %>
        </div>
        <div class='form-group'>
          <label for='inputName'>商品名</label>
          <%= f.text_field :name, autofocus: true, id:'inputName', placeholder:'名前' %>
        </div>
        <div class='form-group'>
          <label for='inputIntroduction'>商品説明</label>
          <%= f.text_area :introduction, autofocus: true, id:'inputIntroduction', placeholder:'ここに説明文を記述します', :size=>'30x5' %>
        </div>
        <div class='form-group'>
          <label for='inputGenre'>ジャンル</label>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: ''}, {class: 'btn btn-outline-dark'} %>
        </div>
        <div class='form-group'>
          <label for='inputPrice'>税抜価格</label>
          <%= f.number_field :price, autofocus: true, id:'inputPrice', placeholder:'税抜価格' %>
          <text>円</text>
        </div>
        <div class='form-group'>
          <label>販売ステータス</label>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, '販売中', {value: :true, style: 'display: inline-block;'} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, '販売停止中', {value: :false, style: 'display: inline-block;'} %>
        </div>
        <div class='form-group'>
          <%= f.submit '変更を保存', class:'btn btn-success' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>