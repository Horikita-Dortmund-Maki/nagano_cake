<div class='container'>
  <div class='row'>
    <div class='md-col-4'>
      <h3>注文履歴詳細</h3>
    </div>
  </div>
  
  <div class='row'>
    <div class='md-col-2'>
      <table class='table table-borderless'>
        <body>
          <tr>
            <th>購入者</th>
            <th>山田花子</th>
          </tr>
          <tr>
            <th>注文日</th>
            <th>2021/05/20</th>
          </tr>
          <tr>
            <th>配送先</th>
            <th>日本</th>
          </tr>
          <tr>
            <th>支払い方法</th>
            <th>銀行振り込み</th>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <%= form_with model:@Order, local:true do |f| %>
              <th>
                <%= f.select :status, [['入金待ち', '1'], ['入金済み', '2'], ['配送中', '3']], include_blank: "入金待ち" %>
              </th>
              <th>
                <%= f.submit '更新', class:'btn btn-sm btn-success' %>
              </th>
            <% end %>
          </tr>
        </body>
      </table>
    </div>
  </div>
  
  <div class='row'>
    <div class='col-md-2'>
      <table class='table'>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
          <tr>
            <th>a</th>
            <th>b</th>
            <th>c</th>
            <th>d</th>
            <th>e</th>
          </tr>
        </thead>
      </table>  
    </div>
    
    <div class='col-md-3 offset-md-7'>
      <table class='table table-borderless'>
        <tbody>
          <tr>
            <th>商品合計</th>
            <th>円</th>
          </tr>
          <tr>
            <th>送料</th>
            <th>円</th>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <th>円</th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  
</div>