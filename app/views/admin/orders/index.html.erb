<div class='container'>
  <div class='row'>
    <div class='md-col-3'>
      <h2>注文履歴一覧</h2>
    </div>
  </div>

  <div class='row'>
    <table class='table'>
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <th><%= link_to order.created_at, admin_order_path(order) %></th>
            <th><%= order.name %></th>
            <th><%= Order.total_amount(order.order_details) %></th>
            <th><%= order.status %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class='row'>
    <div class='mx-auto'>
      <p><%= paginate @orders %></p>
    </div>
  </div>
</div>
