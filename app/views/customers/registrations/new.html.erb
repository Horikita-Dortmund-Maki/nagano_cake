 <div class="container">
   <div class="row ">
      <div class="col-5 offset-3">
        <h1 class="heading08"><span>sign up</span>新規登録</h1>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "customers/shared/error_messages", resource: resource %>
    
            <div class="field">
              <%= f.label :last_name, class: "under" %><span style="color: #FF0000" >＊必須</span><br />
              <%= f.text_field :last_name, class: "form-control" %>
            </div>
    
            <div class="field">
              <%= f.label :first_name, class: "under" %><span style="color: #FF0000" >＊必須</span><br />
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
    
            <div class="field">
              <%= f.label :last_name_kana, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
              <%= f.text_field :last_name_kana, class: "form-control"%>
            </div>
    
            <div class="field">
              <%= f.label :first_name_kana, class: "under"   %><span style="color: #FF0000" >＊必須</span><br />
              <%= f.text_field :first_name_kana, class: "form-control"  %>
            </div>
    
            <div class="field">
              <%= f.label :email, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
              <%= f.email_field :email, autocomplete: "email", class: "form-control"  %>
            </div>
    
            <div class="field">
              <%= f.label :postal_code, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
              <%= f.text_field :postal_code,class: "form-control"  %>
            </div>
    
            <div class="field">
              <%= f.label :address, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
              <%= f.text_field :address,class: "form-control"  %>
            </div>
    
            <div class="field">
              <%= f.label :telephone_number, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
              <%= f.text_field :telephone_number,class: "form-control"  %>
            </div>
    
            <div class="field">
              <%= f.label :password, class: "under" %><span style="color: #FF0000" >＊必須</span>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password",class: "form-control"%>
            </div>
    
            <div class="field">
              <%= f.label :password_confirmation, class: "under"  %><span style="color: #FF0000" >＊必須</span><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control"  %>
            </div>
    
            <div class="actions">
              <%= f.submit "新規登録",class: 'btn btn-sm btn-success'  %>
            </div>
          <% end %>
    
          <h4>既に会員登録済みの方</h4>
          <%= render "customers/shared/links" %>
    </div>
  </div>
</div>