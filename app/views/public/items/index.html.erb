<div class="container">
  <div class="row">
<h1 class="heading08"><span>OLL Item</span>商品一覧(全<%= @all_items.count %>件)</</h1>
    <%= render partial: 'layouts/flash' %>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <% if item.is_active == true %>

      <div class="col-md-3">
        <div class="card border-0">
          <%= link_to item_path(item.id) do %>
          <div class="item_img">
            <%= attachment_image_tag(item, :image, height: "150", fallback: "no_image.jpg") %>
          </div>
          <div class="card-body text-center">
            <p class="card-title"><%= item.name %></p>
              <h4 class="card-price">¥<%= tax_price(item.price) %></h4>
          </div>
          <% end %>
        </div>
      </div>


      <%end%>
    <%end%>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p><%= paginate @items %></p>
      </div>
    </div>
  </div>
</div>
