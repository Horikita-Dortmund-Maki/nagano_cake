
 <div class="container">
   <div class="row">
      <h1 class="heading08"><span>My page</span>マイページ</h1>
    </div>
    <div class="row hoge">
      <div class="col-2"></div>
       <div class="col-8">
        <%= render partial: 'layouts/flash' %>
          <h3>登録情報</h3>
          <%= link_to '編集する', edit_customer_path(@customer),  class: "btn btn-outline-success edit_customer_#{@customer.id}" %>
            <table class="table">
              <tr>
                <th>氏名</th>
                <th><%= @customer.last_name %><%= @customer.first_name %></th>
              </tr>
              <tr>
                <th>カナ</th>
                <th><%= @customer.last_name_kana %><%= @customer.first_name_kana %></th>
              </tr>
              <tr>
                <th>郵便番号</th>
                <th><%= @customer.postal_code %></th>
              </tr>
              <tr>
                <th>住所</th>
                <th><%= @customer.address %></th>
              </tr>
              <tr>
                <th>電話番号</th>
                <th><%= @customer.telephone_number %></th>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <th><%= @customer.email %></th>
              </tr>
            </table>
          <h4>配送先</h4>
          <%= link_to '一覧を見る', send_addresses_path, class: "btn btn-outline-info" %>

          <h4>注文履歴</h4>
          <%= link_to '一覧を見る', orders_path, data: {"turbolinks" => false}, class: "btn btn-outline-info" %>
       </div>
    </div>
 </div>


