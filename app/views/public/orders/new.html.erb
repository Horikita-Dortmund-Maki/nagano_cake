<div class="m-5">
  <div class="m-5">
    <h4><span style="background-color:#ececec">　注文情報入力　</span></h4>
  </div>
  



  <div class="ml-5">
    <div class="field">
      <strong>支払方法</strong>
      <%= form_with model:@order, url: confirm_orders_path,local: true do |f| %>
       <div class="radio-inline">
        <%= f.radio_button :payment_method, :クレジットカード, checked: "checked" %>
        <%= f.label :payment_method, "クレジットカード" %>
       </div>
       <div class="radio-inline">
        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label :payment_method, "銀行振込" %>
       </div>
       
       
       
       
       <strong>お届け先</strong>
       <div class="radio-inline">
        <%= f.radio_button :address_select,0, checked: "checked" %>
        <%= f.label :address_select, "ご自身の住所" %><br>
        <div class="pl-3">
        〒<%= @customer.postal_code %>　<%= @customer.address %><br>
        <%= @customer.last_name %><%= @customer.first_name %>
        </div>
      </div>
      <div class="radio-inline">
        <%= f.radio_button :address_select,1 %>
        <%= f.label :address_select, "登録済住所から選択" %>
        <%= f.select :send_address_id, @send_addresses.map { |send_address| [send_address.name + send_address.address + send_address.postal_code,send_address.id ] } %>
      </div>
      <div class="radio-inline">
        <%= f.radio_button :address_select,2 %>
        <%= f.label :address_select, "新しいお届け先" %>
        </div>
　　　　<%= f.label :"郵便番号(ハイフンなし)"%>
        <%= f.text_field :postal_code, placeholder: "0000000" %><br>
        <%= f.label :"住所" %>
        <%= f.text_area :address, placeholder: "東京都渋谷区代々木10-10" %><br>
        <%= f.label :"宛名" %>
        <%= f.text_field :name, placeholder: "代々木太郎" %><br>
      </div>

        <%= f.submit "確認画面へ進む" , class:"btn btn-primary" %>
        
    
    <% end %>
 </div>
 

</div>
  
  