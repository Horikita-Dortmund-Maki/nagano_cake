<div class="m-5">
  <div class="m-5">
    <h4><span style="background-color:#ececec">　注文情報入力　</span></h4>
　</div>
　<strong>支払方法</strong>
　<div class="ml-5">
　  <div class="form-check">
      <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
      <label class="form-check-label" for="flexRadioDefault1">
        クレジットカード
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
      <label class="form-check-label" for="flexRadioDefault2">
        銀行振込
      </label>
    </div>
  </div>
  
  <strong>お届け先</strong>
  <div class="ml-5">
　  <div class="form-check">
      <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
      <label class="form-check-label" for="flexRadioDefault1">
        ご自身の住所<br>
        〒<%= @customer.postal_code %>　<%= @customer.address %><br>
        <%= @customer.last_name %><%= @customer.first_name %>
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
      <label class="form-check-label" for="flexRadioDefault2">
        登録済住所からの選択
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
      <label class="form-check-label" for="flexRadioDefault2">
        新しいお届け先
        <%= form_with local:true do |f| %>
        <div class="field">
          <%= f.label :"郵便番号(ハイフンなし)"%>
          <%= f.text_field :postal_code, placeholder: "0000000" %>
        </div>
        <div class="field">
          <%= f.label :住所 %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木10-10" %>
        </div>
        <div class="field">
          <%= f.label :宛名 %>
          <%= f.text_field :name, placeholder: "代々木太郎" %>
        </div>
      <% end %>
      </label>
    </div>
  </div>
  <div class="text-center">
    <%= link_to '確認画面へ進む', '/orders/confirm', class: "btn btn-sm btn-primary" %>
  </div>
</div>