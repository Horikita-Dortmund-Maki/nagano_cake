<div class="m-5">
  <div class="m-5">
    <h4><span style="background-color:#ececec">　注文情報確認　</span></h4>
  </div>
  <table border="1" class="mt-5">
   <thead>
     <tr>
       <th>商品名</th>
       <th>単価(税込)</th>
       <th>数量</th>
       <th>小計</th>
     </tr>
   </thead>
   <tbody>
    <% @cart_items.each do |cart_item| %>
     <tr>
       <td><%= cart_item.item.name %></td>
       <td><%= tax_price(cart_item.item.price) %></td>
       <td><%= cart_item.amount %></td>
       <td><%= tax_subtotal(cart_item.item.price,cart_item.amount) %></td>
     </tr>
     <% end %>
   </tbody>
 </table>
 <div class="m-5">
 <table border="1">

  <tr>
   <th>送料</th>
   <td><%= @shopping_cost %></td>
  </tr>
  <tr>
   <th>商品合計</th>
   <td><%=  tax_total_price(@cart_items) %></td>
  </tr>
  <tr>
   <th>
      請求金額
   </th>
   <td>
     <%= @total_payment %>
   </td>
  </tr>

</table>
 </div>

<div class="m-5">
<strong>支払方法</strong>
<%= @order.payment_method %>
</div>
<div class="m-5">
<strong>お届け先</strong>
 〒<%= @order.postal_code %>　<%= @order.address %><br>
　<%= @order.name %>

</div>
</div>
<%= form_with model:@order,local:true do |f| %>
  <%= f.hidden_field :postal_code, value:@order.postal_code  %>
  <%= f.hidden_field :address, value:@order.address %>
  <%= f.hidden_field :name, value:@order.name %>
  <%= f.hidden_field :shopping_cost, value:@shopping_cost %>
  <%= f.hidden_field :total_payment, value:@total_payment %>
  <%= f.hidden_field :payment_method, value:@order.payment_method %>
  <%= f.submit "注文を確定する" ,class: "btn btn-sm btn-success" %>
<% end %>


 