<div class="m-5">
  <div class="m-5">
    <h4><span style="background-color:#ececec">　注文情報確認　</span></h4>
  </div>
  <table border="1" class="mt-5">
   <thead>
     <tr>
       <th>商品名</th>
       <th>単価(税込)</th>
       <th>数量</th>
       <th>小計</th>
     </tr>
   </thead>
   <tbody>
    <% @cart_items.each do |cart_item| %>
     <tr>
       <td><%= cart_item.item.name %></td>
       <td><%= cart_item.item.price %></td>
       <td><%= cart_item.amount %></td>
       <td><%= cart_item.item.price * cart_item.amount %></td>
     </tr>
     <% end %>
   </tbody>
 </table>
 <div class="m-5">
 <table border="1">

  <tr>
   <th>送料</th>
   <td><%= @shopping_cost %></td>
  </tr>
  <tr>
   <th>商品合計</th>
   <td><% array = [] %>
     <% @cart_items.each do |cart_item| %>
     <% array << cart_item.item.price * cart_item.amount %>
     <% end %>
     <%= array.sum %>
   </td>
  </tr>
  <tr>
   <th>
      請求金額
   </th>
   <td>
     <%= @total_payment %>
   </td>
  </tr>

</table>
 </div>

<div class="m-5">
<strong>支払方法</strong>
<%= @order.payment_method %>
</div>
<div class="m-5">
<strong>お届け先</strong>
<% if @order.address_select == "0" %>
 〒<%= @customer.postal_code %>　<%= @customer.address %><br>
 <%= @customer.last_name %><%= @customer.first_name %>
 
<% elsif @order.address_select == "1" %>
 〒<%= @send_address.postal_code %>　<%= @send_address.address %><br>
 <%= @send_address.name %>
 
<% else %>
 〒<%= @order.postal_code %>　<%= @order.address %><br>
　<%= @order.name %>
<% end %>

</div>
</div>

<%= link_to '注文を確定する', "/thanks", class: "btn btn-sm btn-success" %>
 