<div class="container">
  <div class="row">
   <h4><span style="background-color:#ececec">　注文情報確認　</span></h4>
  </div>
  <div class="row mt-5">
   <table class='table  table-inverse col-6 table-bordered'>
    <thead class='thead-light'>
     <tr>
       <th>商品名</th>
       <th>単価(税込)</th>
       <th>数量</th>
       <th>小計</th>
     </tr>
    </thead>
    <tbody>
     <% @cart_items.each do |cart_item| %>
     <tr>
       <td>
        <%= attachment_image_tag(cart_item.item, :image, :fill, 50, 50, fallback: "no_image.jpg") %>
        <%= cart_item.item.name %>
       </td>
       <td><%= tax_price(cart_item.item.price) %>円</td>
       <td><%= cart_item.amount %></td>
       <td><%= tax_subtotal(cart_item.item.price, cart_item.amount) %>円</td>
     </tr>
     <% end %>
    </tbody>
   </table>
   <table class='table table-hover table-inverse col-3 offset-md-2 table-bordered'>
    <thead class='thead-light'>
     <tr>
      <th>送料</th>
      <td><%= @shopping_cost %>円</td>
     </tr>
     <tr>
      <th>商品合計</th>
      <td><%=  tax_total_price(@cart_items)%>円</td>
     </tr>
     <tr>
      <th>請求金額</th>
      <td><%= @total_payment %>円</td>
     </tr>
    </thead>
   </table>
  </div>
  <div class="row">
   <table class='table  table-inverse col-3  mt-3 table-bordered'>
    <thead class='thead-light'>
     <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
     </tr>
    </thead>
   </table>
  </div>
  <div class="row">
   <table class='table  table-inverse col-7  mt-3 table-bordered'>
    <thead class='thead-light'>
     <tr>
      <th>お届け先</th>
      <td>〒<%= @order.postal_code %>　<%= @order.address %><br>
       <%= @order.name %>
      </td>
     </tr>
    </thead>
   </table>
  </div>
  
  <div class="text-center">
   <%= form_with model:@order,local:true do |f| %>
     <%= f.hidden_field :postal_code, value:@order.postal_code  %>
     <%= f.hidden_field :address, value:@order.address %>
     <%= f.hidden_field :name, value:@order.name %>
     <%= f.hidden_field :shopping_cost, value:@shopping_cost %>
     <%= f.hidden_field :total_payment, value:@total_payment %>
     <%= f.hidden_field :payment_method, value:@order.payment_method %>
     <%= f.submit "注文を確定する" ,class: "btn btn-sm btn-success" %>
   <% end %>
  </div>
 </div>
