<div class="container">
  <div class="row">
    <div class="col-4">
      <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
        <h3>管理者ログイン</h3>
   </div>
 </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-4 offset-1 hoge">
          <%= f.label :メールアドレス %>
      </div>
      <div class="col-3">
        <div class="field">
          <%= f.email_field :email,class: "form-control", :size=>"45", autofocus: true, autocomplete: "email",placeholder: "sample@example.com" %>
         </div>
      </div>
    </div>
    <div class="row">
      <div class="col-4 offset-1 hoge">
       <%= f.label :パスワード %>
      </div>
      <div class="col-3">
        <div class="field">
          <%= f.password_field :password,class: "form-control",:size=>"45", autocomplete: "current-password" %>
        </div>
      </div>
    </div>
        <div class="col-8 offset-4 pamu">
          <div class="actions">
            <%= f.submit "ログイン",class: "btn btn-primary" %>
          </div>
       </div>
      <% end %>
      
      <%= render "admins/shared/links" %>
</div>
